<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text="@string/welcome"
        android:textSize="30sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:id="@+id/title"
        android:layout_height="75dp"/>

    <Button
        android:id="@+id/BeginnerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beginner"
        android:background="@drawable/navigation"
        android:layout_above="@+id/AdvancedButton"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/AdvancedButton"
        android:layout_width="wrap_content"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_height="wrap_content"
        android:text="Experienced Player"
        android:background="@drawable/navigation"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/missionFail"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/avalonfrontpage"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/BeginnerButton" />

</RelativeLayout>
